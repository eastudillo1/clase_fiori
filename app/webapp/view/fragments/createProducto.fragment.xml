<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:rt="sap.ui.richtexteditor">
    <Dialog title="Ingreso producto" type='Message' contentWidth="600px" class="sapUiNoContentPadding">
        <content>
            <l:Grid vSpacing="1" hSpacing="1" width="100%" class="sapUiSmallMargin">
                <VBox>
                    <Title text="InformaciÃ³n Producto"/>
                    <layoutData>
                        <l:GridData span="XL12 L12 M12 S12"/>
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="Nombre Producto" />
                    <Input id="ipNombreCrear" width="100%" liveChange="liveChange"/>
                    <Label text="Cantidad x Unidad" />
                    <Input id="ipCantidadUnidadCrear" width="100%" liveChange="liveChange"/>
                    <Label text="Precio" />
                    <Input id="ipPrecioCrear" width="100%" liveChange="onlyNumber"/>
                    <Label text="Stock" />
                    <Input id="ipStockCrear" width="100%" liveChange="onlyNumber"/>
                    <Label text="Pedidos" />
                    <Input id="ipPedidosCrear" width="100%" liveChange="onlyNumber"/>
                    <layoutData>
                        <l:GridData span="XL12 L12 M12 S12"/>
                    </layoutData>
                </VBox>
                <VBox>
                    <Title text="Proveedor"/>
                    <layoutData>
                        <l:GridData span="XL12 L12 M12 S12"/>
                    </layoutData>
                </VBox>
                <VBox>
                    <Select id="slProveedorCrear" forceSelection="false" items="{oModelProveedor>/}" width="100%" change="liveChange">
                        <core:Item key="{oModelProveedor>SupplierID}" text="{oModelProveedor>CompanyName}"/>
                    </Select>
                    <layoutData>
                        <l:GridData span="XL12 L12 M12 S12"/>
                    </layoutData>
                </VBox>
                <VBox>
                    <Title text="Categoria"/>
                    <layoutData>
                        <l:GridData span="XL12 L12 M12 S12"/>
                    </layoutData>
                </VBox>
                <VBox>
                    <Select id="slCategoriaCrear" forceSelection="false" items="{oModelCategorias>/}" width="100%" change="liveChange">
                        <core:Item key="{oModelCategorias>CategoryID}" text="{oModelCategorias>CategoryName}"/>
                    </Select>
                    <layoutData>
                        <l:GridData span="XL12 L12 M12 S12"/>
                    </layoutData>
                </VBox>
            </l:Grid>
        </content>
        <beginButton>
            <Button text="Guardar" type="Emphasized" press="onSaveCreate"/>
        </beginButton>
        <endButton>
            <Button text="Cancelar" press="onCloseCreate"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>